@using Umbraco.Extensions
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem>
@{
    var logoAndName = (LogoAndNameCard)Model.Content;
}


<style>
    .logo-card-container {
       justify-content: space-between;
       width: 100%;
       margin-left: 0;
       margin-right:0;
    }
    .logo-card-container .logo-card .heading-7{
        font-weight: 500;
    }
    .logo-card-container .logo-card {
        position: relative;
        text-align: center;
        /* border: 1px solid rgba(0, 0, 0, 0.1); */
        border-radius: 5px;
        width: 31%;
        margin-top: 40px;
        transition: transform 0.3s ease-out, filter 0.3s ease-out, color 0.3s ease-out;
        cursor: pointer;
     }
     .logo-card-container .logo-card:hover {
        transform: translateY(-10px);
        filter: drop-shadow(5px 5px 2px rgba(0, 0, 0, .2));
     }

     .logo-card-container .logo-card:hover .heading-7 {
        color: #fff;
     }
   
     .logo-card-container .logo-card:hover {
        background: radial-gradient(circle, rgba(255,17,166,1) 0%, rgba(255,99,99,1) 35%, rgba(255,159,80,1) 100%);
     }

    .logo-card-container .card-img-scale {
         position: relative;
         z-index: 2;
    }
   
     .logo-card-container .logo-card::before {
  
       
     }
      .logo-card-container .logo-card::after {
          position: absolute;
          z-index: 1;
          height: 100%;
          width: 100%;
          content: "";
          background-size: cover;
          background-image: url('https://localhost:44339/media/caoipiqi/triangle.png');
          background-position: 100px 10px;
          background-repeat: no-repeat;
          top: 0;
          left: 0;
          outline: 1px solid rgba(2, 0, 36, 0.175);
          border-radius: 5px;
      }
     .logo-card-container .logo-card-img {
         height: 200px;
     }

    @@media screen and (max-width: 856px) {
        .logo-card-container .logo-card{
            width: 50%;
        }
    }

    @@media screen and (max-width: 596px) {
        .logo-card-container .logo-card {
            width: 100%;
        }
    }
</style>
<div class="logo-card-container row g-4 px-3 py-5">
      <!-- Card item START -->
    @foreach (var block in logoAndName.ContentBlockList)
    {

        var content = block.Content as LogoAndName;

        <a href="@content.Link" class="logo-card col-sm-6 col-lg-4">
            <div class="card-img-scale">
                <!-- Card Image -->
                <img class="logo-card-img" src="@content.Logo.MediaUrl()" alt="">
                <!-- Card Image overlay -->
                <div class="logo-card-img-overlay d-flex flex-column p-3 p-md-4">
                    <div>
                        <!-- Card category -->
                    </div>
                    <div class="w-100 mt-auto">

                        <!-- Card title -->
                        <h1 class="heading-7">@content.CompanyName</h1>
                        <!-- Card info -->
                        <p></p>
                    </div>
                </div>
            </div>
        </a>
    }
    
</div> <!-- Row end -->